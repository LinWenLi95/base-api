<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lwl.base.project.dao.SysRolePermissionMapper">

    <!-- 查询单条记录（主键ID查询） -->
    <select id="selectById" resultType="com.lwl.base.project.entity.pojo.SysRolePermission">
        SELECT
        <if test="columns==null ">
            <include refid="allColumns"/>
        </if>
        <if test="columns!=null ">
            <foreach item="item" index="index" collection="columns" separator=",">
                ${item}
            </foreach>
        </if>
        FROM sys_role_permission
        WHERE id=#{id}
        LIMIT 1
    </select>

    <!-- 查询单条记录（map条件查询） -->
    <select id="selectByMap" resultType="com.lwl.base.project.entity.pojo.SysRolePermission">
        SELECT
        <if test="columns==null ">
            <include refid="allColumns"/>
        </if>
        <if test="columns!=null ">
            <foreach item="item" index="index" collection="columns" separator=",">
                ${item}
            </foreach>
        </if>
        FROM sys_role_permission
        <include refid="sqlQueryWhere"/>
        ORDER BY create_time DESC
        LIMIT 1
    </select>

    <!-- 分页查询（map条件查询）-->
    <select id="selectPage" resultType="com.lwl.base.project.entity.pojo.SysRolePermission">
        SELECT
        <if test="columns==null ">
            <include refid="allColumns"/>
        </if>
        <if test="columns!=null ">
            <foreach item="item" index="index" collection="columns" separator=",">
                ${item}
            </foreach>
        </if>
        FROM sys_role_permission
        <include refid="sqlQueryWhere"/>
        <if test="order_by==null or order_by=='' or sort==null or sort==''">
            ORDER BY create_time DESC
        </if>
        <if test="order_by!=null and order_by!='' and sort!=null and sort!=''">
            ORDER BY ${order_by} ${sort}
        </if>
        <if test="offset==null and limit!=null">
            LIMIT ${limit}
        </if>
        <if test="offset!=null and limit!=null">
            LIMIT #{offset},${limit}
        </if>
    </select>

    <!-- 统计数量（map条件查询）-->
    <select id="count" resultType="int">
        SELECT COUNT(id)
        FROM sys_role_permission
        <include refid="sqlQueryWhere"/>
        LIMIT 1
    </select>

    <!-- 添加 单条记录 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_role_permission (
            id,
            role_id,
            permission_id,
            is_del,
            description,
            creator_id,
            create_time
        )
        VALUES (
            #{id},
            #{roleId},
            #{permissionId},
            #{isDel},
            #{description},
            #{creatorId},
            #{createTime}
        )
    </insert>

    <!-- 修改 单条记录 -->
    <update id="update" parameterType="com.lwl.base.project.entity.pojo.SysRolePermission">
        UPDATE sys_role_permission
        <include refid="sqlUpdSet"/>
        WHERE id=#{id}
        LIMIT 1
    </update>

    <!-- 删除 单条记录 -->
    <delete id="delete" parameterType="com.lwl.base.project.entity.pojo.SysRolePermission">
        DELETE FROM sys_role_permission
        WHERE id=#{id}
        LIMIT 1
    </delete>

    <!--通用查询SQL-->
    <sql id="sqlQueryWhere">
        <where>
            <if test="id!=null ">
                and id=#{id}
            </if>
            <if test="roleId!=null ">
                and role_id=#{roleId}
            </if>
            <if test="permissionId!=null ">
                and permission_id=#{permissionId}
            </if>
            <if test="isDel!=null ">
                and is_del=#{isDel}
            </if>
            <if test="description!=null and description!=''">
                and description=#{description}
            </if>
            <if test="creatorId!=null ">
                and creator_id=#{creatorId}
            </if>
            <if test="createTime!=null ">
                and create_time=#{createTime}
            </if>
        </where>
    </sql>

    <!--通用更新SQL-->
    <sql id="sqlUpdSet">
        <set>
            <if test="roleId!=null ">
                role_id=#{roleId},
            </if>
            <if test="permissionId!=null ">
                permission_id=#{permissionId},
            </if>
            <if test="isDel!=null ">
                is_del=#{isDel},
            </if>
            <if test="description!=null and description!=''">
                description=#{description},
            </if>
            <if test="creatorId!=null ">
                creator_id=#{creatorId},
            </if>
            <if test="createTime!=null ">
                create_time=#{createTime},
            </if>
        </set>
    </sql>

    <!--所有列名（用于替代select *中的*）-->
    <sql id="allColumns">
        id,
        role_id,
        permission_id,
        is_del,
        description,
        creator_id,
        create_time
    </sql>
</mapper>